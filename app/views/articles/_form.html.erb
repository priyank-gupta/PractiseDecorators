    <%= f.label :author_id %><br>
    <%= f.select :author_id, Author.all.collect {|author| [author.name, author.id]} %>
  </div>
  <div class="field">
    <%= f.label :published_at %><br>
    <%= f.datetime_select :published_at %>
  </div>
  <div class="field">
    <%= f.label :publication %><br>
    <%= f.text_field :publication %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
